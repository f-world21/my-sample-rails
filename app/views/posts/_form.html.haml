= form_with(model: post, local: true) do |form|
  - if post.errors.any?
    #error_explanation
      %h2
        = pluralize(post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - post.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title, id: :post_title
  .field
    = form.label :body
    = form.text_area :body, id: :post_body
  .field
    = form.label :publish_at
    = form.datetime_select :publish_at, id: :post_publish_at
  .field
    = form.label :tags
    = form.text_area :tags, id: :post_tags
  .actions
    = form.submit
